<Window x:Class="PhotoMover.ConfigurationWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:PhotoMover" mc:Ignorable="d" Title="Edit  Configuration" Height="400" Width="750" WindowStartupLocation="CenterOwner" TextOptions.TextFormattingMode="Display" UseLayoutRounding="True" ResizeMode="CanResizeWithGrip" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" ShowInTaskbar="False">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="auto" />
		</Grid.ColumnDefinitions>
		<Grid Margin="5">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>

			<DataGrid Grid.Row="0" Margin="5,5,5,0" Style="{StaticResource SearchAttributeGrid}" ItemsSource="{Binding ImportConfigurations, Mode=TwoWay}" HorizontalScrollBarVisibility="Disabled">
				<DataGrid.Columns>
					<DataGridTextColumn Binding="{Binding Files, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource DataGridCellAttributes}" Header="Files" Width="1*" />
					<DataGridTextColumn Binding="{Binding DestinationFormat, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource DataGridCellAttributes}" Header="Import Destination" Width="2*" />
					<DataGridTemplateColumn CellStyle="{StaticResource DataGridCellAttributes}">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<Button BorderThickness="0">...</Button>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
			<Label Grid.Row="1" Content="Multiple filenames can be separated by spaces. Import destination can contain placeholders for file dates." Foreground="{StaticResource {x:Static SystemColors.ControlDarkBrushKey} }" Style="{StaticResource CommonTextLabel}" Margin="5,0,5,5" />

			<DataGrid Grid.Row="2" Margin="5,5,5,0" Style="{StaticResource SearchAttributeGrid}" ItemsSource="{Binding LibraryRootDirectories, Mode=TwoWay}" HorizontalScrollBarVisibility="Disabled">
				<DataGrid.Columns>
					<DataGridTextColumn Binding="{Binding Path, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource DataGridCellAttributes}" Header="Library Root Directories" Width="*" />
					<DataGridTemplateColumn CellStyle="{StaticResource DataGridCellAttributes}">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<Button x:Name="ButtonBrowseLibrary" BorderThickness="0" Click="ButtonBrowseLibrary_Click">...</Button>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
			<Label Grid.Row="3" Content="All files in these directories will be checked for duplicates while importing." Foreground="{StaticResource {x:Static SystemColors.ControlDarkBrushKey} }" Style="{StaticResource CommonTextLabel}" Margin="5,0,5,5" />

		</Grid>

		<StackPanel Grid.Column="1" Margin="5" Orientation="Vertical">
			<Button x:Name="ButtonOk" Content="OK" Style="{StaticResource CommonButton}" IsDefault="True" Click="ButtonOk_Click" />
			<Button Content="Cancel" Style="{StaticResource CommonButton}" IsCancel="True" />
			<Button x:Name="ButtonHelp" Content="Help" Style="{StaticResource CommonButton}" Click="ButtonHelp_Click" />
		</StackPanel>

		<Popup Name="HelpPopup" Placement="Center" StaysOpen="False" AllowsTransparency="True">
			<Border Margin="10" Padding="5" BorderThickness="1" BorderBrush="{StaticResource {x:Static SystemColors.ScrollBarBrushKey} }" Background="{StaticResource {x:Static SystemColors.ControlBrushKey} }">
				<Border.Effect>
					<DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity=".3" />
				</Border.Effect>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="auto" />
						<ColumnDefinition Width="auto" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>

					<Label Grid.Row="0" Grid.ColumnSpan="2" Content="Supported date formats:" Style="{StaticResource CommonTextLabel}" FontWeight="Bold" />
					<Label Grid.Row="1" Grid.Column="0" Content="yyyy" Style="{StaticResource CommonTextLabel}" />
					<Label Grid.Row="1" Grid.Column="1" Content="Year (2019)" Style="{StaticResource CommonTextLabel}" />

					<Label Grid.Row="2" Grid.Column="0" Content="MM" Style="{StaticResource CommonTextLabel}" />
					<Label Grid.Row="2" Grid.Column="1" Content="Month number (01)" Style="{StaticResource CommonTextLabel}" />

					<Label Grid.Row="3" Grid.Column="0" Content="MMM" Style="{StaticResource CommonTextLabel}" />
					<Label Grid.Row="3" Grid.Column="1" Content="Short month name (Jan)" Style="{StaticResource CommonTextLabel}" />

					<Label Grid.Row="4" Grid.Column="0" Content="MMMM" Style="{StaticResource CommonTextLabel}" />
					<Label Grid.Row="4" Grid.Column="1" Content="Long month name (January)" Style="{StaticResource CommonTextLabel}" />

					<Label Grid.Row="5" Grid.Column="0" Content="dd" Style="{StaticResource CommonTextLabel}" />
					<Label Grid.Row="5" Grid.Column="1" Content="Day (01)" Style="{StaticResource CommonTextLabel}" />

				</Grid>
			</Border>
		</Popup>

	</Grid>
</Window>
